{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": false, // Disable all strict type-checking options
    "esModuleInterop": true,
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noUnusedLocals": false, // Disable unused local variable checks
    "noUnusedParameters": false, // Disable unused parameters checks
    "noFallthroughCasesInSwitch": false, // Disable fallthrough errors in switch statements
    "noImplicitAny": false, // Allow implicit 'any' type
    "strictNullChecks": false, // Disable strict null checks
    "skipDefaultLibCheck": true // Skip type checking of default libraries
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
